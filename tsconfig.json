{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./node_modules",
    "./src/interfaces",
    "./src/types"
  ]
}